<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="top">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bomb"
            android:id="@+id/imageView"
            android:layout_gravity="center" android:padding="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:inputType="number"
            android:layout_height="50dp"
            android:text="Game Pin Code"
            android:textStyle="bold"
            android:typeface="normal"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter game pin here"
            android:id="@+id/bomb_pin" android:layout_gravity="center" android:inputType="number"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="100dp"

            android:text="Send Bomb Location"
            android:id="@+id/button_send_bomb_location" android:layout_gravity="center"
            android:gravity="center" android:padding="10dp" android:textSize="20dp"
            />
</LinearLayout>

